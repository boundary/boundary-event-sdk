	<bean id="snmp-to-exec" class="com.boundary.sdk.event.snmp.SnmpToExecProcessor"/>
    
	<camelContext id="snmp-metrics" xmlns="http://camel.apache.org/schema/spring">
		<routeBuilder ref="snmp-poller-1"/>
		<routeBuilder ref="snmp-poller-2"/>
		<routeBuilder ref="snmp-poller-3"/>
		<routeBuilder ref="snmp-poller-4"/>
		<routeBuilder ref="snmp-poller-5"/>
		<!-- <routeBuilder ref="snmp-poller-6"/> -->

		<route id="SPLIT-SNMP-XML">
        	<from uri="seda:metric-translate?concurrentConsumers=10"/>
        	<unmarshal><serialization/></unmarshal>
        	<split>
        		<simple>${body.getEntries}</simple>
        		<to uri="direct:translate"/>
        	</split>
        </route>
		<route id="TRANSLATE-TO-METRICS">
			<from uri="direct:translate"/>
			<bean ref="snmp-to-exec" method="process"/>
			<log loggingLevel="DEBUG" message="${headers}"/>
			<to uri="seda:exec-in"/>
		</route>
		<route id="SEND-METRICS">
			<from uri="seda:exec-in?concurrentConsumers=10"/>
			<to uri="exec:command"/>
			<convertBodyTo type="java.lang.String" charset="UTF-8"/>
			<to uri="mock:exec-out"/>
		</route>
		<route id="SEND-METRICS-API">
			<from uri="seda:api-in?concurrentConsumers=10"/>
			<to
		</route>
	</camelContext>
